@model Models.Transaction
@using (Html.BeginForm("Create", "Transactions", FormMethod.Post))
{
    <div class="row">

        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="col">
                <div class="form-group">
                    <label asp-for="tranSum" class="control-label"></label>
                    <input asp-for="tranSum" class="form-control" />
                    <span asp-validation-for="tranSum" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="fromAccountId" class="control-label"></label>
                    <input asp-for="fromAccountId" class="form-control" />
                    <span asp-validation-for="fromAccountId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="fromAccType" class="control-label"></label>
                    <input asp-for="fromAccType" class="form-control" />
                    <span asp-validation-for="fromAccType" class="text-danger"></span>
                </div>
            </div>

            <div class="col">
                <div class="form-group">
                    <label asp-for="transType" class="control-label"></label>
                    <select asp-for="transType" class="form-control">
                        <option value="">Select an Action </option>
                        <option value="Deposit">Deposit</option>
                        <option value="Withdraw">Withdraw</option>
                        <option value="Transfer">Transfer</option>

                    </select>
                    <span asp-validation-for="transType" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="toAccountId" class="control-label"></label>
                    <input asp-for="toAccountId" class="form-control" />
                    <span asp-validation-for="toAccountId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="toAccType" class="control-label"></label>
                    <input asp-for="toAccType" class="form-control" />
                    <span asp-validation-for="toAccType" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Apply" class="btn btn-primary" />
            </div>
        </form>

    </div>

}


